{
  "name": "popo/generator",
  "description": "Plain Old PHP Object (POPO) / Data Transfer Object (TDO) Generator. Convert JSON to PHP class.",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Oliwier Ptak"
    }
  ],
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": "^7.2",
    "symfony/finder": "^4|^5",
    "symfony/console": "^4|^5"
  },
  "require-dev": {
    "phpunit/phpunit": "^8",
    "everon/coding-standard": "^1",
    "symfony/var-dumper": "^4|^5"
  },
  "autoload": {
    "psr-4": {
      "Popo\\": "src/Popo"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\App\\": "tests/App/",
      "Tests\\Functional\\": "tests/Functional/"
    }
  },
  "scripts": {
    "popo" : "bin/popo popo",
    "post-autoload-dump": [
      "chmod +x bin/popo",
      "vendor/bin/cs-setup"
    ]
  },
  "scripts-descriptions": {
    "popo": "Generate POPO files"
  },
  "bin": [
    "bin/popo"
  ]
}
