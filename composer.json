{
  "name": "popo/generator",
  "description": "Plain Old PHP Object (POPO) / Value Object (VO) / Data Transfer Object (DTO) Generator. Convert JSON schema to PHP class.",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Oliwier Ptak"
    }
  ],
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": "^8",
    "ext-json": "*",
    "ext-ctype": "*",
    "symfony/finder": "^5",
    "symfony/console": "^5",
    "symfony/yaml": "^5",
    "nette/php-generator": "^3.5"
  },
  "require-dev": {
    "phpunit/phpunit": "^9",
    "symfony/var-dumper": "^5"
  },
  "autoload": {
    "psr-4": {
      "Popo\\": "src/Popo"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PopoTestsSuites\\": "tests/suits",
      "PopoTestsStubs\\": "tests/stubs",
      "App\\": "tests/App"
    }
  },
  "scripts": {
    "popo": [
      "bin/popo generate -sc=1 -scb=1 -sp=1 -c tests/fixtures/.popo",
      "bin/popo generate -sc=1 -scb=1 -sp=1 -c tests/fixtures/.popo-readme",
      "bin/popo generate -sc=1 -scb=1 -sp=1 -c tests/fixtures/.popo-readme-modules"
    ],
    "post-autoload-dump": [
      "chmod +x bin/popo"
    ],
    "tests": [
      "vendor/bin/phpunit --no-coverage --testdox --testsuite unit,functional"
    ]
  },
  "scripts-descriptions": {
    "popo": "Generate POPO files"
  },
  "bin": [
    "bin/popo"
  ]
}
